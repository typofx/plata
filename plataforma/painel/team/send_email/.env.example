# Email Configuration
# Copy this file to .env and fill with your actual SMTP credentials

# SMTP Server Host
# Common options:
# - Gmail: smtp.gmail.com
# - Outlook: smtp-mail.outlook.com
# - Custom: your-mail-server.com
SMTP_HOST=smtp.gmail.com

# SMTP Server Port
# Common options:
# - 587 (TLS - most common)
# - 465 (SSL)
# - 25 (unencrypted)
SMTP_PORT=587

# SMTP Encryption Type
# Options: tls, ssl, none
SMTP_ENCRYPTION=tls

# SMTP Username (usually your email address)
SMTP_USERNAME=your-email@gmail.com

# SMTP Password (use app-specific password for Gmail)
# For Gmail: https://myaccount.google.com/apppasswords
SMTP_PASSWORD=your-app-specific-password

# From Email Address (sender email)
SMTP_FROM_EMAIL=your-email@gmail.com

# From Name (sender name that appears in email)
SMTP_FROM_NAME=Team Platform
